<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    android:weightSum="120">
    <!--     Row 1 Starts From Here -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="30dp"
            android:gravity="left|center_vertical"
            android:text="Панель кассира"
            android:textColor="@color/design_default_color_primary"
            android:textSize="24sp" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_height="63dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <android.support.design.button.MaterialButton
            android:id="@+id/btnX"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X-otchet"
            android:layout_marginRight="20dp"
            android:textColor="#0F70FD"
            android:textSize="15sp"
            app:backgroundTint="#00FFFFFF"
            app:cornerRadius="8dp"
            android:visibility="gone"
            app:rippleColor="#336B6565"
            app:strokeColor="#0D3ECF"
            app:strokeWidth="2dp" />
        <android.support.design.button.MaterialButton
            android:id="@+id/btnZ"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Z-otchet"
            android:textColor="#0F70FD"
            android:textSize="15sp"
            android:layout_marginRight=
                "20dp"

            app:backgroundTint="#00FFFFFF"
            app:cornerRadius="8dp"
            app:rippleColor="#336B6565"
            app:strokeColor="#0D3ECF"
            app:strokeWidth="2dp" />

        <android.support.design.button.MaterialButton
            android:id="@+id/btnLogout"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выйти"
            android:textColor="#D63838"
            android:textSize="15sp"
            android:visibility="gone"

            app:backgroundTint="#00FFFFFF"
            app:cornerRadius="8dp"
            app:rippleColor="#33EC2B2B"
            app:strokeColor="#8A1515"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btnStartShift"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect"
            android:text="Начать смену"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:typeface="monospace" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="54dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="193dp"
            android:layout_height="58dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Пользователь :"
            android:textColor="#141313"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txtPersonId"
            android:layout_width="200dp"
            android:layout_height="58dp"
            android:gravity="center_vertical"
            android:text="68"
            android:textColor="#141313"
            android:textSize="23sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="60dp"
        android:gravity="start|center_vertical"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner_gas"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/spinner_money"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

        <android.support.design.button.MaterialButton
            android:id="@+id/button_payment"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_payment"
            android:text="Оплатить"
            android:textColor="#257515"
            android:textSize="17sp"
            app:backgroundTint="#B0FC9E"
            app:cornerRadius="8dp"
            app:rippleColor="#2D9618"
            app:strokeColor="#2D9618"
            app:strokeWidth="2dp" />

    </LinearLayout>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="95dp"
        android:layout_weight="10"
        android:background="#FFFFFF"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textSum"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_span="4"
            android:background="@null"
            android:gravity="right"
            android:inputType="number"
            android:textColor="#000000"
            android:textSize="40dp"
            android:typeface="monospace" />

    </TableRow>

    <!--     Row 3 Starts From Here -->
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="95dp"
        android:layout_margin="5dp"
        android:layout_weight="10"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="@drawable/ripple_button"
            android:text="7"
            android:textColor="#000000"
            android:textSize="30sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="@drawable/ripple_button"
            android:text="8"
            android:textColor="#000000"
            android:textSize="35dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="@drawable/ripple_button"
            android:text="9"
            android:textColor="#000000"
            android:textSize="35dp"
            android:typeface="monospace" />


    </TableRow>


    <!--     Row 4 Starts From Here -->
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:layout_weight="10">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="4"
            android:textSize="35dp"
            android:background="@drawable/ripple_button"
            android:textColor="#000000"
            android:layout_span="1"
            android:typeface="monospace"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="5"
            android:textSize="35dp"
            android:background="@drawable/ripple_button"
            android:textColor="#000000"
            android:layout_span="1"
            android:typeface="monospace"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="6"
            android:textSize="35dp"
            android:background="@drawable/ripple_button"
            android:textColor="#000000"
            android:layout_span="1"
            android:typeface="monospace"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"/>


    </TableRow>


    <!--     Row 5 Starts From Here -->

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:layout_weight="10">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="@drawable/ripple_button"
            android:text="1"
            android:textColor="#000000"
            android:textSize="35dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="@drawable/ripple_button"
            android:text="2"
            android:textColor="#000000"
            android:textSize="35dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="@drawable/ripple_button"
            android:text="3"
            android:textColor="#000000"
            android:textSize="35dp"
            android:typeface="monospace" />

    </TableRow>

    <!--     Row 2 Starts From Here -->
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:layout_marginTop="2dp"
        android:layout_weight="10"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/buttonClearText"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="@drawable/ripple_effect"
            android:text="C"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/buttonZero"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="1dp"
            android:layout_span="1"
            android:background="@drawable/ripple_button"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:typeface="monospace" />


        <Button
            android:id="@+id/buttonRemove"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_span="1"
            android:background="@drawable/ripple_remove"
            android:drawableLeft="@drawable/ic_backspace"
            android:textSize="35dp"
            android:paddingLeft="40dp"
            android:typeface="monospace" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="174dp"
        android:layout_weight="20"
        android:gravity="center_horizontal">
    </TableRow>


</TableLayout>
